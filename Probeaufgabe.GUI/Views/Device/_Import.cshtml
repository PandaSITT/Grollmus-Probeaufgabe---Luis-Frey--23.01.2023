@model ImportFile

<div class="modal fade" tabindex="-1" id="importModal">
    <div class="modal-dialog">
        <form asp-action="Import" enctype="multipart/form-data" id="importForm">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Json-Datei importieren</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input asp-for="JsonFile" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Schließen</button>
                    <button type="button" class="btn btn-primary" onclick="$('#importForm').submit()">Importieren</button>
                </div>
            </div>
        </form>
    </div>
</div>